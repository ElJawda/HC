<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        />
    <com.shc.SHC_SS.views.HCTextViewN
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="شكرا  الى  مشاركتكم"
        />

    <com.shc.SHC_SS.views.HCEditTextN
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:hint="اضف تعليق"
        android:id="@+id/comment"
        android:gravity="right"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:textColor="@color/maroo"
        android:background="@drawable/border"
        />
    <com.shc.SHC_SS.views.HCButtonN
        android:id="@+id/upload"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:text="حفظ "
        android:background="@drawable/border"
        android:textColor="@color/colorPrimary"
        android:layout_margin="@dimen/padding_xx"

        />

</LinearLayout>