<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/border">

    <include
        android:id="@+id/vertical_se"
        layout="@layout/vertical_separator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_"></include>

    <FrameLayout
        android:id="@+id/all_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"

        >

        <LinearLayout
            android:id="@+id/title_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <com.shc.SHC_SS.views.HCBoldTextViewN
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_container_10"
                android:lineSpacingExtra="5dp"
                android:textAlignment="center"
                android:textColor="@color/maroo"
                android:textSize="@dimen/textSize_25sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.shc.SHC_SS.views.HCBoldTextViewN
                    android:id="@+id/textView1"
                    android:layout_width="@dimen/radio__width120"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_container_10"
                    android:lineSpacingExtra="5dp"
                    android:padding="@dimen/padding_x"
                    android:textColor="@color/question_color"
                    android:textSize="@dimen/textSize_25sp"

                    android:textStyle="bold" />


            </FrameLayout>


            <LinearLayout
                android:id="@+id/hideradio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.shc.SHC_SS.views.CustomRaidoButtonN
                        android:id="@+id/txt_rd7_2"
                        android:layout_width="@dimen/radio_button_width120"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawablePadding="@dimen/padding_x"
                        android:drawableRight="@android:drawable/btn_radio"
                        android:textColor="@color/reply_color"
                        android:textSize="@dimen/textSize_21sp" />


                    <com.shc.SHC_SS.views.CustomRaidoButtonN
                        android:id="@+id/txt_rd7_4"
                        android:layout_width="@dimen/radio_button_width120"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawablePadding="@dimen/padding_x"
                        android:drawableRight="@android:drawable/btn_radio"
                        android:textColor="@color/reply_color"
                        android:textSize="@dimen/textSize_21sp"
                        android:visibility="gone" />

                    <com.shc.SHC_SS.views.CustomRaidoButtonN
                        android:id="@+id/txt_rd7_6"
                        android:layout_width="@dimen/radio_button_width120"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawablePadding="@dimen/padding_x"
                        android:drawableRight="@android:drawable/btn_radio"
                        android:textColor="@color/reply_color"
                        android:textSize="@dimen/textSize_21sp"
                        android:visibility="gone" />

                    <com.shc.SHC_SS.views.CustomRaidoButtonN
                        android:id="@+id/txt_rd7_8"
                        android:layout_width="@dimen/radio_button_width120"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawablePadding="@dimen/padding_x"
                        android:drawableRight="@android:drawable/btn_radio"
                        android:textColor="@color/reply_color"
                        android:textSize="@dimen/textSize_21sp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.shc.SHC_SS.views.CustomRaidoButtonN
                        android:id="@+id/txt_rd7_1"
                        android:layout_width="@dimen/radio_button_width120"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawablePadding="@dimen/padding_x"
                        android:drawableRight="@android:drawable/btn_radio"
                        android:textColor="@color/reply_color"
                        android:textSize="@dimen/textSize_21sp" />

                    <com.shc.SHC_SS.views.CustomRaidoButtonN
                        android:id="@+id/txt_rd7_3"
                        android:layout_width="@dimen/radio_button_width120"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawablePadding="@dimen/padding_x"
                        android:drawableRight="@android:drawable/btn_radio"

                        android:textColor="@color/reply_color"
                        android:textSize="@dimen/textSize_21sp"
                        android:visibility="gone" />


                    <com.shc.SHC_SS.views.CustomRaidoButtonN
                        android:id="@+id/txt_rd7_5"
                        android:layout_width="@dimen/radio_button_width120"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawablePadding="@dimen/padding_x"
                        android:drawableRight="@android:drawable/btn_radio"
                        android:textColor="@color/reply_color"
                        android:textSize="@dimen/textSize_21sp"
                        android:visibility="gone" />

                    <com.shc.SHC_SS.views.CustomRaidoButtonN
                        android:id="@+id/txt_rd7_7"
                        android:layout_width="@dimen/radio_button_width120"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawablePadding="@dimen/padding_x"

                        android:drawableRight="@android:drawable/btn_radio"
                        android:textColor="@color/reply_color"
                        android:textSize="@dimen/textSize_21sp"
                        android:visibility="gone" />

                    <com.shc.SHC_SS.views.CustomRaidoButtonN
                        android:id="@+id/txt_rd7_9"
                        android:layout_width="@dimen/radio_button_width120"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawablePadding="@dimen/padding_x"
                        android:drawableRight="@android:drawable/btn_radio"
                        android:textColor="@color/reply_color"
                        android:textSize="@dimen/textSize_21sp"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <com.shc.SHC_SS.views.HCEditTextN
                android:id="@+id/enter_value"
                android:layout_width="@dimen/radio__width260"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_container_x"
                android:background="@drawable/border"
                android:hint="@string/edit_hint"
                android:inputType="number"
                android:lineSpacingExtra="5dp"
                android:imeOptions="actionDone"
                android:visibility="gone" />

            <com.shc.SHC_SS.views.HCEditTextN
                android:id="@+id/enter_string"
                android:layout_width="@dimen/radio__width260"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_container_x"
                android:background="@drawable/border"
                android:hint="@string/edit_hint"
                android:inputType="text"
                android:imeOptions="actionDone"

                android:lineSpacingExtra="5dp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/seek_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.shc.SHC_SS.views.HCBoldTextViewN
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_container_10"
                    android:lineSpacingExtra="5dp"
                    android:padding="@dimen/padding_x"
                    android:text="0"
                    android:textColor="@color/end_color"
                    android:textSize="@dimen/textSize_25sp"
                    android:textStyle="bold" />

                <SeekBar
                    android:id="@+id/seek"
                    android:layout_width="@dimen/radio__width260"
                    android:layout_height="wrap_content" />

                <com.shc.SHC_SS.views.HCBoldTextViewN
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_container_10"
                    android:lineSpacingExtra="5dp"
                    android:padding="@dimen/padding_x"
                    android:text="10"
                    android:textColor="@color/end_color"
                    android:textSize="@dimen/textSize_25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Spinner
                android:id="@+id/grid_sppiner"
                android:layout_width="@dimen/radio__width260"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_container_x"
                android:visibility="gone"></Spinner>

        </LinearLayout>

    </FrameLayout>

    <include
        android:id="@+id/horizental_sp"
        layout="@layout/horizental_separator"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"></include>
</android.support.v7.widget.CardView>