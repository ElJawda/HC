<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="3">

    <FrameLayout
        android:id="@+id/frame_child"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:visibility="gone"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/child_question"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@color/gray"
            android:visibility="gone" />
        <com.shc.SHC_SS.views.HCEditTextN
            android:id="@+id/child_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_"
            android:background="@drawable/border"
            android:hint="@string/edit_hint"
            android:padding="@dimen/padding_x"
            android:textColor="@color/center_color"
            android:textColorHint="@color/center_color"
            android:visibility="gone" />
    </FrameLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:background="@color/gray" />

</LinearLayout>